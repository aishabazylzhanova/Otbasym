<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/editdata_advanced"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/editadata_tipi"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textSize="18sp"/>

	</LinearLayout>
	<LinearLayout
		android:id="@+id/editadata_prima"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:orientation="horizontal"
		android:layoutDirection="ltr">
		<NumberPicker
			android:id="@+id/first_day"
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			android:theme="@style/AppTheme.Wheel"/>
		<NumberPicker
			android:id="@+id/first_month"
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			android:layout_marginLeft="8dp"
			android:theme="@style/AppTheme.Wheel"/>
		<NumberPicker
			android:id="@+id/first_century"
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			android:layout_marginLeft="8dp"
			android:theme="@style/AppTheme.Wheel"/>
		<NumberPicker
			android:id="@+id/first_year"
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			android:layout_marginLeft="8dp"
			android:theme="@style/AppTheme.Wheel"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/editeddate_second_advanced"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="end"
		android:orientation="horizontal"
		android:visibility="gone">
		<CheckBox
			android:id="@+id/editadata_negativa2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="B.C."/>
		<CheckBox
			android:id="@+id/editadata_doppia2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/double_date"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/editeddate_second"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:orientation="horizontal"
		android:layoutDirection="ltr"
		android:visibility="gone">
		<NumberPicker
			android:id="@+id/second_day"
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			android:theme="@style/AppTheme.Wheel"/>
		<NumberPicker
			android:id="@+id/second_month"
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			android:layout_marginLeft="8dp"
			android:theme="@style/AppTheme.Wheel"/>
		<NumberPicker
			android:id="@+id/second_century"
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			android:layout_marginLeft="8dp"
			android:theme="@style/AppTheme.Wheel"/>
		<NumberPicker
			android:id="@+id/second_year"
			android:layout_width="wrap_content"
			android:layout_height="100dp"
			android:layout_marginLeft="8dp"
			android:theme="@style/AppTheme.Wheel"/>
	</LinearLayout>
</LinearLayout>
